{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "typeRoots": [ "./node_modules/@types" ],
    "noImplicitAny": false,
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}