{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "typeRoots": [ "./src/types", "./node_modules/@types" ],
    "strict": true,
    "declaration": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}