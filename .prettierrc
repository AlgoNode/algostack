{
  "plugins": ["@ianvs/prettier-plugin-sort-imports"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": { "parser": "svelte" }
    }
  ],
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "all",
  "singleQuote": true,
  "semi": true,
  "arrowParens": "always",

  "importOrder": [
    "<TYPES>",
    "",
    "<BUILTIN_MODULES>",
    "<THIRD_PARTY_MODULES>",
    "^svelte(.*)$",
    "^@supeer(.*)$",
    "",
    "^\\$app/(.*)$",
    "^\\$lib/(.*)$",
    "^\\$entities/(.*)$",
    "^\\$components/(.*)$",
    "^[../]",
    "^[./]",
    ".css$"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true
}
